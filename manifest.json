{
  "manifest_version": 3,
  "name": "Memory Layer - Universal AI Memory",
  "version": "1.0.0",
  "description": "Capture and enhance AI conversations across ChatGPT, Claude, Gemini, and Grok with universal memory",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://*.supabase.co/*",
    "https://*.onrender.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Memory Layer - Open Dashboard"
  },
  
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content/chatgpt.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content/gemini.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content/claude.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://grok.com/*"],
      "js": ["content/grok.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "auth.js",
        "auth-callback.html",
        "styles/*.css",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
